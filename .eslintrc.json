{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb", "plugin:react/recommended", "airbnb/hooks", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/jsx-filename-extensions": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
    "no-use-before-define": ["error", { "variables": false }],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "import/extensions": [
      "never",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "css": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/vite.config.js",
          "**/*.test.js",
          "**/*.spec.js",
          "src/**/*.js",
          "src/**/*.jsx",
          "src/**/*.ts",
          "src/**/*.tsx"
        ]
      }
    ]
  },
  "plugins": ["react"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
